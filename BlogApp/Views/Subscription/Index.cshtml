@model BlogApp.ViewModels.SubscriptionViewModel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h4 class="mb-3">Subscriptions</h4>
            <div class="list-group">
                @foreach (var user in Model.Subscriptions)
                {
                    <div class="list-group-item list-group-item-action d-flex align-items-center">
                        <img src="@user.ProfileImageUrl ?? "/images/default-profile.png"" class="rounded-circle me-3" alt="Profile Image" style="width: 50px; height: 50px;">
                        <div>
                            <h5 class="mb-0">@user.Name @user.Surname</h5>
                            <small class="text-muted">@user.UserName</small>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-md-6">
            <h4 class="mb-3">Subscribers</h4>
            <div class="list-group">
                @foreach (var user in Model.Subscribers)
                {
                    <div class="list-group-item list-group-item-action d-flex align-items-center">
                        <img src="@user.ProfileImageUrl ?? "/images/default-profile.png"" class="rounded-circle me-3" alt="Profile Image" style="width: 50px; height: 50px;">
                        <div>
                            <h5 class="mb-0">@user.Name @user.Surname</h5>
                            <small class="text-muted">@user.UserName</small>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>