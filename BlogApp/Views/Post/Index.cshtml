@model BlogApp.ViewModels.PostViewModel

<div class="container mt-4">
    <div class="row">
        <!-- Ana Postlar -->
        <div class="col-lg-8">
            <div class="bg-white p-4 rounded shadow-sm">
                <h1 class="h4 mb-4 text-primary fw-bold">Popular Posts</h1>
                @foreach (var post in Model.Posts)
                {
                    <div class="card border-0 mb-4">
                        <div class="row g-0">
                            <!-- Post Görseli -->
                            <div class="col-md-4">
                                <img src="@post.ImageUrl" class="img-fluid rounded-start" alt="Post Image">
                            </div>
                            <!-- Post İçeriği -->
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="/Post/Details/@post.PostId" class="text-decoration-none text-dark fw-bold">
                                            @post.Title
                                        </a>
                                    </h5>
                                    <p class="card-text text-muted">@post.Description</p>
                                    <p class="mt-2">
                                        <a href="#" class="badge bg-danger bg-opacity-10 text-danger fw-bold">Web</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="my-4">
                }

                <!-- Sayfalama -->
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>

        <!-- Yan Menü -->
        <div class="col-lg-4">
            <div class="bg-white p-4 rounded shadow-sm mb-4">
                <vc:tags-menu></vc:tags-menu>
            </div>
            <div class="bg-white p-4 rounded shadow-sm">
                <vc:new-posts></vc:new-posts>
            </div>
        </div>
    </div>
</div>
