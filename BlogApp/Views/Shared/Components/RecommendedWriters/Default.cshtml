@model List<BlogAppUser>

    <div class="card mb-2">
        <div class="card-header">
            <h5 class="card-title mb-0">Recommended Writers</h5>
        </div>
        <div class="list-group list-group-flush">
            @foreach (var writer in Model)
            {
                <div class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <a href="/Profile/@writer.UserName">
                                <img src="@writer.ProfileImageUrl" class="rounded-circle me-3" alt="Profile Image" style="width: 50px; height: 50px;">
                            </a>
                            <div>
                                <h6 class="mb-0">
                                    <a href="/Profile/@writer.UserName" class="text-decoration-none text-dark">
                                        @writer.Name @writer.Surname
                                    </a>
                                </h6>
                                <small class="text-muted">@writer.UserName</small>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>